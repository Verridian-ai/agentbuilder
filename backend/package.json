{
  "name": "agent-builder-backend",
  "version": "1.0.0",
  "description": "Agent Builder Backend - Google Cloud + Neon PostgreSQL",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --coverage --detectOpenHandles",
    "test:watch": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:api": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=api",
    "test:db": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=database",
    "test:ai": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=ai",
    "test:claude": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=claude",
    "test:integration": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=integration",
    "test:ci": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --reporters=default --reporters=jest-junit",
    "db:init": "curl -X POST http://localhost:8080/api/db/init",
    "health": "curl http://localhost:8080/health",
    "docker:build": "docker build -t agent-builder-backend .",
    "docker:run": "docker run -p 8080:8080 --env-file .env agent-builder-backend",
    "deploy:gcloud": "gcloud run deploy agent-builder-backend --source . --region australia-southeast1 --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/__tests__/**/*.test.mjs"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ]
  },
  "keywords": [
    "agent-builder",
    "cloud-ide",
    "neon-db",
    "google-cloud",
    "express",
    "mcp",
    "claude",
    "anthropic"
  ],
  "author": "Agent Builder Team",
  "license": "MIT"
}
