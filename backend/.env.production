# Agent Builder Backend - PRODUCTION Configuration
# Copy to .env and fill in your actual values

# =============================================================================
# REQUIRED - Server will NOT start without these
# =============================================================================

# JWT secret for signing tokens (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Neon PostgreSQL connection string (REQUIRED)
# Get from: https://console.neon.tech
NEON_DB_CONNECTION_STRING=

# Allowed CORS origins (REQUIRED for production)
# Comma-separated list of allowed frontend URLs
ALLOWED_ORIGINS=https://agent-builder.verridian.ai

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
NODE_ENV=production
REGION=australia-southeast1

# =============================================================================
# GOOGLE CLOUD PLATFORM
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=
CLOUD_STORAGE_BUCKET=agent-builder-ide-files

# For local development only (Cloud Run uses default service account)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# AI SERVICES (OpenRouter)
# =============================================================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# =============================================================================
# GITHUB INTEGRATION (Optional)
# =============================================================================
GITHUB_TOKEN=
GITHUB_PERSONAL_ACCESS_TOKEN=

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379
